@* Renderiza el contenido solo si el usuario está autorizado (simulación) *@
@if (Autorizado)
{
    @ChildContent
}
else
{
    <MudAlert Severity="Severity.Warning" Dense="true">No tienes permisos para ver este contenido.</MudAlert>
}

@code {
    [Parameter] public bool Autorizado { get; set; } = true;
    [Parameter] public RenderFragment? ChildContent { get; set; }
}