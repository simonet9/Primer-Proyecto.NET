@page "/"

<PageTitle>Bienvenida - Centro de Eventos</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="d-flex flex-column justify-center align-center min-vh-100">
    <MudPaper Elevation="3" Class="pa-8 welcome-paper">
        <MudStack Row="false" Spacing="4" AlignItems="AlignItems.Center">
            <MudIcon Icon="@Icons.Material.Filled.Event" 
                     Color="Color.Primary" 
                     Size="Size.Large" 
                     Style="width: 64px; height: 64px;" />
            
            <MudText Typo="Typo.h3" 
                     Align="Align.Center" 
                     Color="Color.Primary" 
                     Class="welcome-title">
                ¡Bienvenido a Centro de Eventos!
            </MudText>
            
            <MudText Typo="Typo.subtitle1" 
                     Align="Align.Center" 
                     Class="mb-6" 
                     Style="max-width: 600px;">
                Gestiona tus eventos deportivos de manera fácil y segura.
            </MudText>

            <MudPaper Elevation="0" Class="pa-4" Style="border: none;">
                <MudStack Row="true" Spacing="3" JustifyContent="JustifyContent.Center">
                    <MudButton Href="/Login"
                             Variant="Variant.Filled" 
                             Color="Color.Primary" 
                             Size="Size.Large"
                             Class="px-6">
                        Iniciar sesión
                    </MudButton>
                    <MudButton Href="/Registro"
                             Variant="Variant.Outlined" 
                             Color="Color.Secondary" 
                             Size="Size.Large"
                             Class="px-6">
                        Registrarse
                    </MudButton>
                </MudStack>
            </MudPaper>
        </MudStack>
    </MudPaper>
</MudContainer>

<style>
    .welcome-paper {
        backdrop-filter: blur(10px);
        border-radius: 16px;
        max-width: 800px;
        margin: 2rem;
        transition: all 0.3s ease;
    }

    .welcome-title {
        font-weight: 700;
        margin-bottom: 0.5rem;
    }
</style>